{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "prHourlyLimit": 4,
    "baseBranches": ["main", "release-2.9.x", "release-2.8.x"],
    "packageRules": [
      {
        "matchBaseBranches": ["release-2.9.x","release-2.8.x"],
        "packagePatterns": ["*"],
        "enabled": false
      },
      {
        "groupName": "go-docker-dependencies",
        "matchManagers": ["dockerfile"],
        "matchUpdateTypes": ["minor", "patch", "major"],
        "matchPackageNames": [
          "golang"
        ]
      },
      {
        "groupName": "alpine-docker-dependencies",
        "matchManagers": ["dockerfile"],
        "matchUpdateTypes": ["minor", "patch", "major"],
        "matchPackageNames": [
          "alpine/helm",
          "alpine"
        ]
      },
      {
        "groupName": "docker-dependencies",
        "matchManagers": ["dockerfile"],
        "matchUpdateTypes": ["minor", "patch", "major"]
      },
      {
        "groupName": "minor-and-patch-auto-merge",
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true,
      }
    ],
    "vulnerabilityAlerts": {
      "enabled": true,
      "labels": ["area/security"]
    },

    "osvVulnerabilityAlerts": true,
    "prConcurrentLimit": 10,
    "rebaseWhen": "conflicted",
  }
